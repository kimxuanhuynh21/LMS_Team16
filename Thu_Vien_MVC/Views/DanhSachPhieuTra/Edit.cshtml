@model EF_Models.Models.PhieuTra

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PhieuTra</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <form class="form-horizontal">
            <div class="form-group col-md-12 col-xs-12">
                <label class="control-label col-sm-2">Mã phiếu trả</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.MaPhieuTra, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaPhieuTra, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-12 col-xs-12">
                <label class="control-label col-sm-2">Mã thẻ độc giả</label>
                <div class="col-md-5">
                    @Html.DropDownList("DocGiaID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DocGiaID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-12 col-xs-12">
                <label class="control-label col-sm-2">Ngày trả</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.NgayTra, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayTra, "", new { @class = "text-danger" })
                </div>
            </div>
        </form>

    </div>
}

<table class="table table-bordered table-striped">
    <tr>
        <th>
            <p>STT</p>
        </th>
        <th>
            <p>Mã vạch</p>
        </th>
        <th>
            <p>Tên đầu sách</p>
        </th>
        <th>
            <p>Tên tác giả</p>
        </th>
        <th>
            <p>Tên thể loại</p>
        </th>
        <th>
            <p>Chức năng</p>
        </th>
    </tr>
</table>

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
