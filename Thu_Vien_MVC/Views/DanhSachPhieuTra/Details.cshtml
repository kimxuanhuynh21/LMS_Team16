@model EF_Models.Models.PhieuTra

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>PhieuTra</h4>
    <hr />

    <form class="form-horizontal">
        <div class="form-group col-md-12 col-xs-12">
            <label class="text-right col-sm-2">Mã phiếu trả</label>
            <div class="col-md-5">
                @Html.DisplayFor(model => model.MaPhieuTra)
            </div>
        </div>
        <div class="form-group col-md-12 col-xs-12">
            <label class="text-right col-sm-2">Mã thẻ độc giả</label>
            <div class="col-md-5">
                @Html.DisplayFor(model => model.DocGia.MaThe)
            </div>
        </div>
        <div class="form-group col-md-12 col-xs-12">
            <label class="text-right col-sm-2">Ngày trả</label>
            <div class="col-md-5">
                @Html.DisplayFor(model => model.NgayTra)
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            <p>STT</p>
        </th>
        <th>
            <p>Mã vạch</p>
        </th>
        <th>
            <p>Tên đầu sách</p>
        </th>
        <th>
            <p>Tên tác giả</p>
        </th>
        <th>
            <p>Tên thể loại</p>
        </th>
    </tr>
    @{ int i = 1;}
    @foreach (var item in Model.dsChiTietTra)
    {
        <tr>
            <td>
                @i
            </td>
            @{i++;}
            <td>
                @Html.DisplayFor(modelItem => item.CuonSach.MaVach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuonSach.DauSach.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuonSach.DauSach.TacGia.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuonSach.DauSach.TheLoai.Ten)
            </td>
        </tr>
                }
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
