@model EF_Models.Models.PhieuMuon

@{
    ViewBag.Title = "Sửa";
}

<h2>Phiếu mượn</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PhieuMuon</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <form class="form-horizontal">
            <div class="form-group col-md-12 col-xs-12">
                <label class="control-label col-sm-2">Mã phiếu mượn</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.MaPhieuMuon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaPhieuMuon, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-12 col-xs-12">
                <label class="control-label col-sm-2">Mã thẻ độc giả</label>
                <div class="col-md-5">
                    @Html.DropDownList("DocGiaID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DocGiaID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-12 col-xs-12">
                <label class="control-label col-sm-2">Mã nhân viên</label>
                <div class="col-md-5">
                    @Html.DropDownList("NhanVienID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NhanVienID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-12 col-xs-12">
                <label class="control-label col-sm-2">Ngày mượn</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.NgayMuon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayMuon, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-12 col-xs-12">
                <label class="control-label col-sm-2">Ngày hết hạn</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.NgayHetHan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
                </div>
            </div>
        </form>

    </div>
}
<table class="table table-bordered table-striped">
    <tr>
        <th>
            <p>STT</p>
        </th>
        <th>
            <p>Mã vạch</p>
        </th>
        <th>
            <p>Tên đầu sách</p>
        </th>
        <th>
            <p>Tên tác giả</p>
        </th>
        <th>
            <p>Tên thể loại</p>
        </th>
        <th>
            <p>Chức năng</p>
        </th>
    </tr>
    @{ int i = 1;}
    @foreach (var item in Model.dsChiTietMuon)
    {
        <tr>
            <td>
                @i
            </td>
            @{i++;}
            <td>
                @Html.DisplayFor(modelItem => item.CuonSach.MaVach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuonSach.DauSach.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuonSach.DauSach.TacGia.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuonSach.DauSach.TheLoai.Ten)
            </td>
            <td>
                @Html.ActionLink("Xóa", "Delete", new { controller = "ChiTietMuon", id = item.ID })
            </td>
        </tr>
     }

</table>

<div class="row">
    <div class="form-group text-right">
        <div class="col-xs-3 col-md-offset-8 col-md-2">
            <button type="button" class="btn btn-warning form-control"><i class="fa fa-times" aria-hidden="true"></i>Hủy phiếu nhập</button>
        </div>
        <div class="col-xs-3 col-md-2">
            <button type="submit" class="btn btn-primary form-control""><i class="fa fa-check" aria-hidden="true"></i>Hoàn tất</button>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
